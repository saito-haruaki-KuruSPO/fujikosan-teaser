---
import FeatureTitle from '../components/FeatureTitle.astro'
import Heading from '../components/Heading.astro'
import Mask from '../components/Mask.astro'
import Container from '../layouts/Container.astro'
import Section from '../layouts/Section.astro'

const imgClasses = 'w-full'
const imgContainerClasses = 'absolute overflow-hidden'

const { t } = Astro.props
---

<Section id="feature" className="pt-160">
  <Heading primary={t.heading.primary} secondary={t.heading.secondary} className="mb-100 lg:mb-200" />
  <ul class="mb-200 grid gap-40 lg:gap-155">
    <li class="relative z-1">
      <div class="bg-primary absolute -top-40 left-0 h-40 w-full [clip-path:polygon(0%_0%,100%_100%,0%_100%)] lg:-top-155 lg:h-155"></div>
      <div class="bg-primary py-48 text-white lg:py-72">
        <Container className="max-w-1440">
          <article class="lg:flex">
            <div class="relative z-1 mb-40 grid gap-40 lg:mb-0 lg:w-640 lg:gap-0 lg:pl-80">
              <div class="flex items-center gap-8 lg:mb-32"><i class="icon-halo text-16"></i><p class="text-14/100 lg:text-16 font-en font-bold uppercase">Feature 01</p></div>
              <FeatureTitle titlePrimary={t.items.f01.title.primary} titleSecondary={t.items.f01.title.secondary} maskColorClass="bg-primary" />
              <p class="text-14/200 lg:text-16/200" set:html={t.items.f01.bodyHtml} />
            </div>
            <div class="relative mx-auto h-[calc(312/390*100vw)] w-[calc(338/390*100vw)] lg:mx-0 lg:h-auto lg:w-[calc(100%-640px)]">
              <div class={`${imgContainerClasses} top-[calc(56/390*100vw)] left-0 w-[calc(168/390*100vw)] lg:right-[min(422px,calc(422/1440*100vw))] lg:-top-[min(45px,calc(45/1440*100vw))] lg:left-auto lg:w-[min(280px,calc(280/1440*100vw))]`}>
